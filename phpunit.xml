<!-- 
  This file tells PHPUnit how to run your tests.
  The 'bootstrap' attribute points to a setup file that loads your application's code.
-->
<phpunit bootstrap="tests/bootstrap.php"
         colors="true"
         verbose="true"
         stopOnFailure="false">
    <testsuites>
        <testsuite name="Project Test Suite">
            <directory>tests</directory>
        </testsuite>
    </testsuites>
</phpunit>
